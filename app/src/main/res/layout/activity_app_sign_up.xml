<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.hostelmanager.hostelmaster.AppSignUpp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:text="Please enter your details" />

        <ImageView
            android:id="@+id/Appsignupiv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            app:srcCompat="@drawable/myaccount" />

        <EditText
            android:id="@+id/Appsignupfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Appsignuppass1"
            android:layout_below="@+id/Appsignupiv"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Full name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Appsignupemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Appsignupfn"
            android:layout_below="@+id/Appsignupfn"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/Appsignupmob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/Appsignupemail"
            android:layout_below="@+id/Appsignupemail"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Mobile"
            android:inputType="phone" />

        <EditText
            android:id="@+id/Appsignuppass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Appsignupmob"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Type password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/Appsignuppass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Appsignuppass1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Retype password"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/Appsignupcb"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Appsignuppass2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:text="By Clicking Sign up you are agree to our Terms And condition" />

        <Button
            android:id="@+id/Appsignupsignupbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Appsignupcb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Sign up" />

    </RelativeLayout>
</ScrollView>