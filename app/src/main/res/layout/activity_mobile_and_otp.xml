<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.hostelmanager.hosteladmin.MobileAndOTP">

        <!-- TODO: Update blank fragment layout -->
        <FrameLayout
            android:id="@+id/fly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/noshower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="OTP has been sent to "
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/noshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/noshower"
                android:layout_marginLeft="140dp"
                android:text="+x 9876543210"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/nochange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="55dp"
                android:text="Click here"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />


            <TextView
                android:id="@+id/noshowe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="135dp"
                android:text="To change"
                android:textAppearance="@style/TextAppearance.AppCompat" />

        </FrameLayout>


        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:ems="10"
            android:hint="PhoneNumber"
            android:inputType="phone" />

        <EditText
            android:id="@+id/otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter OTP"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_centerHorizontal="true"
            android:text="Verify"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/otp"
            android:layout_marginTop="45dp" />

    </RelativeLayout>
</ScrollView>