<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bookImage"
            android:layout_width="182dp"
            android:layout_height="185dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bookNameInAdapter"
            app:srcCompat="@drawable/book" />
        <TextView
            android:id="@+id/bookNameInAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="193dp"
            android:text="TextView" />

         <TextView
            android:id="@+id/authorNameInAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bookNameInAdapter"
            android:layout_marginTop="222dp"
            android:text="TextView" />
        <TextView
            android:id="@+id/priceInAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/authorNameInAdapter"
            android:layout_marginTop="257dp"
            android:text="TextView" />
        <TextView
            android:id="@+id/conditionBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/authorNameInAdapter"
            android:layout_marginTop="280dp"
            android:text="TextView" />

    </RelativeLayout>
</android.support.v7.widget.CardView>